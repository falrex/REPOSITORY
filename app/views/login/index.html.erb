<h1>Login</h1> 
<% form_tag :action=>"authenticate" do%>
<%=flash[:error]%>
<table>
  <tr>
    <td><%=label_tag "username"%></td>
    <td><%=text_field_tag "username"%></td>    
  </tr>
  
  <tr>
    <td><%=label_tag "password"%></td>
    <td><%=password_field_tag "password"%></td>    
  </tr>

  <tr>
    <td colspan=2 align=center>
      <%=submit_tag "login"%> &nbsp <%= link_to 'Register', :controller=>"users",:action=>"new"%>
    </td>
  </tr>



</table>
<%end%>