<h1>Subject Lists</h1>
<p><%= link_to 'Home', :controller=>"teacherpage" %> -> Subjects</p>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td><%=h subject.name %></td>
    <td><%=h subject.description %></td>
    <td><%= link_to 'Add Section', :controller=>"sections", :action=>"new",:subject=>subject%></td>
    <td><%= link_to 'View Sections', :controller=>"sections", :action=>"index",:subject=>subject%></td>
    
    <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
    <td><%= link_to 'Destroy', subject, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New subject', new_subject_path %> &nbsp <%= link_to 'go to users', :controller=>"users"%>