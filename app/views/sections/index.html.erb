<h1><%= flash[:subjectname] %></h1>
<p><%= link_to 'Home', :controller=>"teacherpage" %> -> <%= link_to "Subjects", :controller=>"subjects" %> -> <%= flash[:subjectname]%></p>

<table>
  <tr>
    <th>Section</th>
    <th>Time</th>
    <th>Day</th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%=h section.section %></td>
    <td><%=h section.time %></td>
    <td><%=h section.day %></td>
    
    <td><%= link_to 'Add Quiz', :controller=>"quizzes", :action=>"new",:section=>section%></td>
    <%if (params[:subject]!=nil)%>
    <td><%= link_to 'View Quizzes', :controller=>"quizzes", :action=>"index",:section=>section%></td>
    <%else%>    
    <td><%= link_to 'View Grades', :controller=>"teacherpage", :action=>"grades",:section=>section%></td>
    <%end%>
    <td><%= link_to 'Delete', section, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New section', new_section_path %>